<div class="flex items-center justify-between">
  <div class="flex items-center">
    <%= contact_image @contact, class: "w-16 h-16 rounded-md"%>
    <h1 class="ml-4 text-3xl font-bold"><%= @contact.full_name %></h1>
  </div>
  <div class="flex">
    <%= link_to edit_contact_path @contact do %>
      <%= inline_svg_tag "edit.svg", class: "mr-2 w-10 h-10 hover:bg-gray-100 rounded"%>
    <% end %>
    <%= link_to @contact, method: :delete, data: { confirm: 'Are you sure?' } do %>
      <%= inline_svg_tag "trash.svg", class: "w-10 h-10 hover:bg-red-100 rounded"%>
    <% end %>
  </div>
</div>
<div class="p-6 mt-4 bg-white rounded-lg shadow">
  <div class="relative p-2 transition-all duration-500 border rounded focus-within:border-blue-500 focus-within:text-blue-500">
    <div class="absolute px-1 -mt-4 text-xs tracking-wider uppercase">
      <p class="px-1 text-gray-600 bg-white">Organization</p>
    </div>
    <p class="block w-full h-full px-2 py-1 text-gray-900 outline-none"><%= @contact.organization %></p>
  </div>
  <div class="flex my-10">
    <div class="w-1/2 mr-3">
      <div class="relative h-full p-1 transition-all duration-500 border rounded focus-within:border-blue-500 focus-within:text-blue-500" >
        <div class="absolute px-1 -mt-4 text-xs tracking-wider uppercase">
          <p class="px-1 text-gray-600 bg-white">Emails</p>
        </div>
        <div class="grid items-center w-full grid-cols-6 p-2">
          <% @contact.emails.each do |e| %>
            <div class="col-span-1 py-1 font-semibold">
              <%= e.label %>
            </div>
            <div class="col-span-5 py-1">
              <%= e.email %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="w-1/2 ml-3">
      <div class="relative h-full p-1 transition-all duration-500 border rounded focus-within:border-blue-500 focus-within:text-blue-500">
        <div class="absolute px-1 -mt-4 text-xs tracking-wider uppercase">
          <p class="px-1 text-gray-600 bg-white">Phone Numbers</p>
        </div>
        <div class="grid items-center w-full grid-cols-6 p-2">
          <% @contact.phone_numbers.each do |p| %>
            <div class="col-span-1 py-1 font-semibold ">
              <%= p.label %>
            </div>
            <div class="col-span-5 py-1">
              <%= p.phone_number %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="relative p-1 py-2 transition-all duration-500 border rounded focus-within:border-blue-500 focus-within:text-blue-500">
    <div class="absolute px-1 -mt-4 text-xs tracking-wider uppercase">
      <p class="px-1 text-gray-600 bg-white">Notes</p>
    </div>
    <textarea class="p-2 pointer-events-none resize-none select-none focus:outline-none focus:shadow-outline"><%= @contact.notes %></textarea>
  </div>
</div>
