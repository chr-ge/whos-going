<h1 class="text-3xl font-bold">My Contacts</h1>
<div class="flex my-3">
  <input type="text" class="w-full px-4 py-2 text-sm leading-tight text-gray-100 placeholder-gray-200 bg-gray-800 rounded focus:outline-none focus:bg-gray-700" placeholder="Search" aria-label="Search">
  <%= link_to "Add New Contact", new_contact_path, class: "ml-2 bg-gray-700 hover:bg-gray-800 rounded text-white p-2 text-center" %>
</div>
<div class="flex flex-col h-full p-2 mt-2 border border-black rounded">
  <% @contacts.each do |contact| %>
    <%= link_to contact, class: "hover:bg-gray-200" do %>
      <div class="flex items-center justify-between py-4 border-b border-gray-800">
        <h1 class="text-black"><%= contact.full_name %><%= " â€¢ #{contact.organization}" unless contact.organization.blank? %></h1>
        <%= link_to "Edit", edit_contact_path(contact), class: "bg-purple-400 p-2 rounded hover:bg-purple-500" %>
      </div>
    <% end %>
  <% end %>
</div>
