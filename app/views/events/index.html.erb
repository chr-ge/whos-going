<div class="flex items-center justify-between pt-4 pb-2">
  <div class="flex items-center">
    <%= inline_svg_tag "event.svg", class: "h-12 w-12 mr-2 -ml-1" %>
    <h1 class="mx-2 text-3xl font-bold lg:mx-0">My Events</h1>
  </div>
  <%= link_to new_event_path, class: "create-event px-4 py-3 rounded-md" do %>
    <span>Create New Event</span>
  <% end %>
</div>
<div class="flex flex-col h-full mx-2 mt-2 rounded lg:mx-0">
  <% @events.each do |event| %>
    <div class="flex items-center justify-between my-1 bg-white border border-gray-800 rounded-md">
      <%= link_to event, class: "flex items-center p-4 w-full" do %>
        <div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4 xl:w-1/5">
          <p class="mb-1 ml-4 text-lg font-semibold text-black"><%= event.name %></p>
          <p class="ml-4 text-black"><%= date_in_words event %></p>
        </div>
        <p class="py-4 pl-8 ml-6 lg:border-gray-500 lg:border-l-2">
          <span class="p-1 px-2 mr-2 font-bold bg-purple-300 rounded"><%= event.available %></span>
          open spots
        </p>
      <% end %>
      <%= link_to edit_event_path(event) do %>
        <%= inline_svg_tag "edit.svg", class: "h-8 w-8 m-4 bg-gray-300 hover:bg-gray-400 rounded" %>
      <% end %>
    </div>
  <% end %>
</div>
